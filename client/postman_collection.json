            },
            {
              "name": "Search Patients",
              "request": {
                "method": "GET",
                "header": [
                  {
                    "key": "Authorization",
                    "value": "Bearer {{token}}"
                  }
                ],
                "url": {
                  "raw": "{{base_url}}/api/fhir/Patient?name=Smith",
                  "host": ["{{base_url}}"],
                  "path": ["api", "fhir", "Patient"],
                  "query": [
                    {
                      "key": "name",
                      "value": "Smith"
                    }
                  ]
                }
              }
            }
          ]
        },
