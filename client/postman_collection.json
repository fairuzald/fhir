{
  "info": {
    "name": "FHIR Simulation Server",
    "description": "API collection for FHIR R4 simulation server",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
  },
  "item": [
    {
      "name": "Authentication",
      "item": [
        {
          "name": "Login",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"email\": \"admin@fhir.com\",\n  \"password\": \"admin123\"\n}"
            },
            "url": {
              "raw": "{{base_url}}/api/auth/login",
              "host": ["{{base_url}}"],
              "path": ["api", "auth", "login"]
            }
          },
          "event": [
            {
              "listen": "test",
              "script": {
                "type": "text/javascript",
                "exec": [
                  "if (pm.response.code === 200) {",
                  "  try {",
                  "    const data = pm.response.json();",
                  "    if (data && data.access_token) {",
                  "      pm.collectionVariables.set('token', data.access_token);",
                  "      console.log('Token stored to collection variable');",
                  "    }",
                  "  } catch (e) {",
                  "    console.log('Failed parsing token', e);",
                  "  }",
                  "}"
                ]
              }
            }
          ]
        },
        {
          "name": "Get Me",
          "request": {
            "method": "GET",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{token}}"
              }
            ],
            "url": {
              "raw": "{{base_url}}/api/auth/me",
              "host": ["{{base_url}}"],
              "path": ["api", "auth", "me"]
            }
          }
        }
      ]
    },
    {
      "name": "FHIR Resources",
      "item": [
        {
          "name": "Get Metadata",
          "request": {
            "method": "GET",
            "url": {
              "raw": "{{base_url}}/api/fhir/metadata",
              "host": ["{{base_url}}"],
              "path": ["api", "fhir", "metadata"]
            }
          }
        },
        {
          "name": "Patient",
          "item": [
            {
              "name": "Create Patient",
              "request": {
                "method": "POST",
                "header": [
                  {
                    "key": "Content-Type",
                    "value": "application/json"
                  },
                  {
                    "key": "Authorization",
                    "value": "Bearer {{token}}"
                  }
                ],
                "body": {
                  "mode": "raw",
                  "raw": "{\n  \"resourceType\": \"Patient\",\n  \"identifier\": [{\n    \"value\": \"PAT003\",\n    \"system\": \"http://hospital.example.com/patients\"\n  }],\n  \"name\": [{\n    \"family\": \"Doe\",\n    \"given\": [\"John\"]\n  }],\n  \"gender\": \"male\",\n  \"birthDate\": \"1995-03-10\"\n}"
                },
                "url": {
                  "raw": "{{base_url}}/api/fhir/Patient",
                  "host": ["{{base_url}}"],
                  "path": ["api", "fhir", "Patient"]
                },
                "event": [
                  {
                    "listen": "test",
                    "script": {
                      "type": "text/javascript",
                      "exec": [
                        "if (pm.response.code === 200 || pm.response.code === 201) {",
                        "  try {",
                        "    const data = pm.response.json();",
                        "    if (data && data.id) { pm.collectionVariables.set('patient_id', data.id); }",
                        "  } catch (e) { /* no-op */ }",
                        "}"
                      ]
                    }
                  }
                ]
              }
            },
            {
              "name": "Search Patients",
              "request": {
                "method": "GET",
                "header": [
                  {
                    "key": "Authorization",
                    "value": "Bearer {{token}}"
                  }
                ],
                "url": {
                  "raw": "{{base_url}}/api/fhir/Patient?name=Smith",
                  "host": ["{{base_url}}"],
                  "path": ["api", "fhir", "Patient"],
                  "query": [
                    {
                      "key": "name",
                      "value": "Smith"
                    }
                  ]
                }
              }
            },
            {
              "name": "Get Patient",
              "request": {
                "method": "GET",
                "header": [
                  { "key": "Authorization", "value": "Bearer {{token}}" }
                ],
                "url": {
                  "raw": "{{base_url}}/api/fhir/Patient/{{patient_id}}",
                  "host": ["{{base_url}}"],
                  "path": ["api", "fhir", "Patient", "{{patient_id}}"]
                }
              }
            },
            {
              "name": "Update Patient",
              "request": {
                "method": "PUT",
                "header": [
                  { "key": "Content-Type", "value": "application/json" },
                  { "key": "Authorization", "value": "Bearer {{token}}" }
                ],
                "body": {
                  "mode": "raw",
                  "raw": "{\n  \"resourceType\": \"Patient\",\n  \"name\": [{\n    \"family\": \"Doe\",\n    \"given\": [\"Johnny\"]\n  }]\n}"
                },
                "url": {
                  "raw": "{{base_url}}/api/fhir/Patient/{{patient_id}}",
                  "host": ["{{base_url}}"],
                  "path": ["api", "fhir", "Patient", "{{patient_id}}"]
                }
              }
            },
            {
              "name": "Delete Patient",
              "request": {
                "method": "DELETE",
                "header": [
                  { "key": "Authorization", "value": "Bearer {{token}}" }
                ],
                "url": {
                  "raw": "{{base_url}}/api/fhir/Patient/{{patient_id}}",
                  "host": ["{{base_url}}"],
                  "path": ["api", "fhir", "Patient", "{{patient_id}}"]
                }
              }
            }
          ]
        },
