                  "raw": "{\n  \"resourceType\": \"Observation\",\n  \"status\": \"final\",\n  \"code\": {\n    \"coding\": [{\n      \"code\": \"8310-5\",\n      \"display\": \"Body temperature\"\n    }]\n  },\n  \"subject\": {\n    \"reference\": \"Patient/PATIENT_ID\"\n  },\n  \"encounter\": {\n    \"reference\": \"Encounter/ENCOUNTER_ID\"\n  },\n  \"effectiveDateTime\": \"2024-01-20T10:30:00Z\",\n  \"valueQuantity\": {\n    \"value\": 98.6,\n    \"unit\": \"Â°F\",\n    \"system\": \"http://unitsofmeasure.org\",\n    \"code\": \"[degF]\"\n  }\n}"
