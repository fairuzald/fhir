                  },
                  {
                    "key": "Authorization",
                    "value": "Bearer {{token}}"
                  }
                ],
                "body": {
                  "mode": "raw",
                  "raw": "{\n  \"resourceType\": \"Patient\",\n  \"identifier\": [{\n    \"value\": \"PAT003\",\n    \"system\": \"http://hospital.example.com/patients\"\n  }],\n  \"name\": [{\n    \"family\": \"Doe\",\n    \"given\": [\"John\"]\n  }],\n  \"gender\": \"male\",\n  \"birthDate\": \"1995-03-10\"\n}"
                },
                "url": {
                  "raw": "{{base_url}}/api/fhir/Patient",
                  "host": ["{{base_url}}"],
                  "path": ["api", "fhir", "Patient"]
